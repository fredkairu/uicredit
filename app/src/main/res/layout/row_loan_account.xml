<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android">


    <!---LINE OF SEPERATION -->
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       app:cardCornerRadius="2dp"
       android:elevation="6dp"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

          <RelativeLayout
              android:layout_width="match_parent"

              android:layout_marginBottom="-10dp"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/images"
                  android:layout_width="20dp"

                  android:layout_gravity="center"
                  android:layout_height="20dp"
                  android:layout_marginRight="3dp"
                  android:layout_alignParentRight="true"

                  />
          </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">



               <android.support.v7.widget.AppCompatImageView
                   android:visibility="gone"
                   android:id="@+id/iv_status_indicator"
                   android:layout_width="@dimen/side_bar_width"
                   android:layout_height="match_parent"
                   android:src="@drawable/round_corner"
                   android:layout_marginTop="@dimen/default_margin"
                   android:layout_marginBottom="@dimen/default_margin"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="@dimen/row_padding_left">

                       <TextView
                           android:visibility="gone"
                           android:id="@+id/tv_clientLoanAccountNumber"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:lines="1"
                           android:text="@string/medium_text"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                           android:textColor="@color/blue_dark" />

                       <TextView
                           android:id="@+id/disbursements"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginRight="5dp"
                           android:ellipsize="end"
                           android:lines="1"
                           android:text="Approved Date :"
                           android:textColor="@color/black"
                           android:textSize="@dimen/text_size_14sp" />

                       <TextView
                           android:id="@+id/tv_date"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="@string/small_text"
                           android:textSize="@dimen/text_size_14sp"
                           android:textColor="@color/light_yellow" />

                       <TextView
                           android:id="@+id/tv_loanAccountProductName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/small_text"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                           android:textColor="@color/red"
                           android:visibility="gone" />




                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="-26dp"
                       android:padding="@dimen/row_padding_left">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:lines="1"
                           android:textSize="@dimen/text_size_14sp"
                           android:text="Interest Rate :  "
                           android:textColor="@color/black" />
                       <TextView
                           android:id="@+id/tvRates"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="15%"
                           android:textSize="@dimen/text_size_14sp"
                           android:textColor="@color/light_yellow"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                     android:layout_marginTop="-26dp"
                       android:padding="@dimen/row_padding_left">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:lines="1"
                           android:layout_gravity="center"
                           android:text="Amount to pay : "
                           android:textSize="@dimen/text_size_14sp"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                           android:textColor="@color/black" />
                       <TextView
                           android:id="@+id/tv_account_balance"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="@string/medium_text"
                           android:textSize="@dimen/text_size_14sp"
                           android:textColor="@color/light_yellow"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                   </LinearLayout>


               </LinearLayout>



           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               android:layout_marginTop="-10dp">
               <TextView
                   android:id="@+id/tv_paymentdate2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="Payment Date : "
                   android:textSize="@dimen/text_size_14sp"
                   android:textColor="@color/black"
                    />

               <TextView
                   android:id="@+id/tv_paymentdate"
                   android:layout_toEndOf="@+id/tv_paymentdate2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="8 Jul 2019"
                   android:textSize="@dimen/text_size_14sp"
                   android:textColor="@color/light_red"
                   />

           </RelativeLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>

